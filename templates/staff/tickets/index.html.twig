{% extends 'base.html.twig' %}

{% block title %}Liste des tickets{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="bi bi-ticket-perforated me-2"></i>
                    Liste des tickets
                </h1>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-end">
                        <div class="col-md-3">
                            <label class="form-label">Filtrer par statut</label>
                            <select class="form-select" onchange="filterByStatus(this.value)">
                                <option value="">Tous les statuts</option>
                                <option value="Nouveau" {% if current_status == 'Nouveau' %}selected{% endif %}>Nouveau</option>
                                <option value="Ouvert" {% if current_status == 'Ouvert' %}selected{% endif %}>Ouvert</option>
                                <option value="Résolu" {% if current_status == 'Résolu' %}selected{% endif %}>Résolu</option>
                                <option value="Fermé" {% if current_status == 'Fermé' %}selected{% endif %}>Fermé</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('staff_tickets') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-clockwise me-1"></i>
                                Réinitialiser
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Tickets 
                        {% if current_status %}
                            - Statut: {{ current_status }}
                        {% endif %}
                        ({{ tickets|length }} résultat{{ tickets|length > 1 ? 's' : '' }})
                    </h6>
                </div>
                <div class="card-body">
                    {% if tickets %}
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Auteur</th>
                                        <th>Catégorie</th>
                                        <th>Statut</th>
                                        <th>Responsable</th>
                                        <th>Date d'ouverture</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for ticket in tickets %}
                                        <tr {% if ticket.responsible == app.user %}class="table-info"{% endif %}>
                                            <td>{{ ticket.id }}</td>
                                            <td>{{ ticket.authorEmail }}</td>
                                            <td>
                                                <span class="badge bg-primary">{{ ticket.category.name }}</span>
                                            </td>
                                            <td>
                                                {% if ticket.status.name == 'Nouveau' %}
                                                    <span class="badge bg-info">{{ ticket.status.name }}</span>
                                                {% elseif ticket.status.name == 'Ouvert' %}
                                                    <span class="badge bg-warning">{{ ticket.status.name }}</span>
                                                {% elseif ticket.status.name == 'Résolu' %}
                                                    <span class="badge bg-success">{{ ticket.status.name }}</span>
                                                {% elseif ticket.status.name == 'Fermé' %}
                                                    <span class="badge bg-secondary">{{ ticket.status.name }}</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">{{ ticket.status.name }}</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if ticket.responsible %}
                                                    {% if ticket.responsible == app.user %}
                                                        <strong>{{ ticket.responsible.fullName ?: ticket.responsible.email }}</strong>
                                                        <small class="text-success">(Vous)</small>
                                                    {% else %}
                                                        {{ ticket.responsible.fullName ?: ticket.responsible.email }}
                                                    {% endif %}
                                                {% else %}
                                                    <span class="text-muted">Non assigné</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ ticket.openedAt|date('d/m/Y H:i') }}</td>
                                            <td>
                                                <a href="{{ path('staff_ticket_show', {'id': ticket.id}) }}" 
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="Voir les détails">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="bi bi-ticket-perforated display-1 text-muted"></i>
                            <p class="mt-3 text-muted">
                                {% if current_status %}
                                    Aucun ticket trouvé avec le statut "{{ current_status }}".
                                {% else %}
                                    Aucun ticket trouvé.
                                {% endif %}
                            </p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function filterByStatus(status) {
    let url = new URL(window.location);
    if (status) {
        url.searchParams.set('status', status);
    } else {
        url.searchParams.delete('status');
    }
    window.location = url;
}
</script>
{% endblock %}