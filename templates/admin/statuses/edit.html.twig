{% extends 'base.html.twig' %}

{% block title %}Modifier le statut{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil me-2"></i>
                        Modifier le statut "{{ status.name }}"
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                            <div class="form-text">Optionnel - Décrivez brièvement ce statut</div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                {{ form_widget(form.isDefault) }}
                                {{ form_label(form.isDefault, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            {{ form_errors(form.isDefault) }}
                            {% if form.isDefault.vars.help %}
                                <div class="form-text">{{ form.isDefault.vars.help }}</div>
                            {% endif %}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_statuses') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                Retour à la liste
                            </a>
                            {{ form_widget(form.submit) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Informations sur l'utilisation -->
            <div class="card shadow mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Informations</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1">
                        <strong>Tickets associés :</strong> 
                        <span class="badge bg-info">{{ status.tickets|length }}</span>
                    </p>
                    {% if status.tickets|length > 0 %}
                        <small class="text-warning">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            Ce statut ne peut pas être supprimé car il est utilisé par des tickets.
                        </small>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}