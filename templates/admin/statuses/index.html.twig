{% extends 'base.html.twig' %}

{% block title %}Gestion des statuts{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="bi bi-flag me-2"></i>
                    Gestion des statuts
                </h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <a href="{{ path('admin_status_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-1"></i>
                            Nouveau statut
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Liste des statuts</h6>
                </div>
                <div class="card-body">
                    {% if statuses %}
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Description</th>
                                        <th>Par défaut</th>
                                        <th>Nombre de tickets</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for status in statuses %}
                                        <tr>
                                            <td>{{ status.id }}</td>
                                            <td>
                                                <span class="badge bg-secondary">{{ status.name }}</span>
                                            </td>
                                            <td>{{ status.description|default('Aucune description') }}</td>
                                            <td>
                                                {% if status.isDefault %}
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-lg"></i> Oui
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-light text-dark">Non</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge bg-info">{{ status.tickets|length }}</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_status_edit', {'id': status.id}) }}" 
                                                       class="btn btn-sm btn-outline-warning"
                                                       title="Modifier">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <form method="post" 
                                                          action="{{ path('admin_status_delete', {'id': status.id}) }}" 
                                                          style="display: inline;"
                                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce statut ?')">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ status.id) }}">
                                                        <button class="btn btn-sm btn-outline-danger" 
                                                                type="submit"
                                                                title="Supprimer"
                                                                {% if status.tickets|length > 0 %}disabled{% endif %}>
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="bi bi-flag display-1 text-muted"></i>
                            <p class="mt-3 text-muted">Aucun statut trouvé.</p>
                            <a href="{{ path('admin_status_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus-lg me-1"></i>
                                Créer le premier statut
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}