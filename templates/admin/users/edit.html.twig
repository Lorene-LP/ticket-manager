{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil me-2"></i>
                        Modifier l'utilisateur "{{ user.email }}"
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.firstName, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.firstName) }}
                                {{ form_errors(form.firstName) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.lastName, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.lastName) }}
                                {{ form_errors(form.lastName) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.plainPassword) }}
                            {{ form_errors(form.plainPassword) }}
                            {% if form.plainPassword.vars.help %}
                                <div class="form-text">{{ form.plainPassword.vars.help }}</div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.roles, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="row">
                                {% for child in form.roles %}
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            {{ form_widget(child) }}
                                            {{ form_label(child) }}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            {{ form_errors(form.roles) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_users') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                Retour à la liste
                            </a>
                            {{ form_widget(form.submit) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Informations sur l'utilisation -->
            <div class="card shadow mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Informations</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1">
                        <strong>Tickets assignés :</strong> 
                        <span class="badge bg-info">{{ user.assignedTickets|length }}</span>
                    </p>
                    {% if user.assignedTickets|length > 0 %}
                        <small class="text-warning">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            Cet utilisateur ne peut pas être supprimé car il est responsable de tickets.
                        </small>
                    {% endif %}
                    {% if user == app.user %}
                        <small class="text-info">
                            <i class="bi bi-info-circle me-1"></i>
                            Vous ne pouvez pas supprimer votre propre compte.
                        </small>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}