{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="bi bi-tags me-2"></i>
                    Gestion des catégories
                </h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <a href="{{ path('admin_category_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-1"></i>
                            Nouvelle catégorie
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Liste des catégories</h6>
                </div>
                <div class="card-body">
                    {% if categories %}
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Description</th>
                                        <th>Nombre de tickets</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for category in categories %}
                                        <tr>
                                            <td>{{ category.id }}</td>
                                            <td>
                                                <span class="badge bg-primary">{{ category.name }}</span>
                                            </td>
                                            <td>{{ category.description|default('Aucune description') }}</td>
                                            <td>
                                                <span class="badge bg-info">{{ category.tickets|length }}</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}" 
                                                       class="btn btn-sm btn-outline-warning"
                                                       title="Modifier">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <form method="post" 
                                                          action="{{ path('admin_category_delete', {'id': category.id}) }}" 
                                                          style="display: inline;"
                                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                                        <button class="btn btn-sm btn-outline-danger" 
                                                                type="submit"
                                                                title="Supprimer"
                                                                {% if category.tickets|length > 0 %}disabled{% endif %}>
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="bi bi-tags display-1 text-muted"></i>
                            <p class="mt-3 text-muted">Aucune catégorie trouvée.</p>
                            <a href="{{ path('admin_category_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus-lg me-1"></i>
                                Créer la première catégorie
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}