{% extends 'base.html.twig' %}

{% block title %}Gestion des tickets{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="bi bi-ticket-perforated me-2"></i>
                    Gestion des tickets
                </h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Liste des tickets</h6>
                </div>
                <div class="card-body">
                    {% if tickets %}
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Auteur</th>
                                        <th>Catégorie</th>
                                        <th>Statut</th>
                                        <th>Responsable</th>
                                        <th>Date d'ouverture</th>
                                        <th>Date de fermeture</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for ticket in tickets %}
                                        <tr>
                                            <td>{{ ticket.id }}</td>
                                            <td>{{ ticket.authorEmail }}</td>
                                            <td>
                                                <span class="badge bg-primary">{{ ticket.category.name }}</span>
                                            </td>
                                            <td>
                                                {% if ticket.status.name == 'Nouveau' %}
                                                    <span class="badge bg-info">{{ ticket.status.name }}</span>
                                                {% elseif ticket.status.name == 'Ouvert' %}
                                                    <span class="badge bg-warning">{{ ticket.status.name }}</span>
                                                {% elseif ticket.status.name == 'Résolu' %}
                                                    <span class="badge bg-success">{{ ticket.status.name }}</span>
                                                {% elseif ticket.status.name == 'Fermé' %}
                                                    <span class="badge bg-secondary">{{ ticket.status.name }}</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">{{ ticket.status.name }}</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if ticket.responsible %}
                                                    {{ ticket.responsible.fullName ?: ticket.responsible.email }}
                                                {% else %}
                                                    <span class="text-muted">Non assigné</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ ticket.openedAt|date('d/m/Y H:i') }}</td>
                                            <td>
                                                {% if ticket.closedAt %}
                                                    {{ ticket.closedAt|date('d/m/Y H:i') }}
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_ticket_show', {'id': ticket.id}) }}" 
                                                       class="btn btn-sm btn-outline-primary"
                                                       title="Voir">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_ticket_edit', {'id': ticket.id}) }}" 
                                                       class="btn btn-sm btn-outline-warning"
                                                       title="Modifier">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="bi bi-ticket-perforated display-1 text-muted"></i>
                            <p class="mt-3 text-muted">Aucun ticket trouvé.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}